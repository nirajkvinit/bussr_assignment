        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "jest-mock-extended": "^1.0.13",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    }
