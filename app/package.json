        "lodash": "^4.17.21",
        "mongoose": "^5.12.3",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/express": "^4.17.11",
        "@types/helmet": "^4.0.0",
        "@types/lodash": "^4.14.168",
        "@types/node": "^14.14.37",
        "@types/winston": "^2.4.4",
