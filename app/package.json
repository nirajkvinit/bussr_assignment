    },
    "scripts": {
        "build": "tsc",
        "build+run": "tsc && node dist/index.js",
        "server": "node dist/index.js",
        "dev1": "nodemon -e s --exec 'npm run build+run'",
        "dev": "nodemon --config nodemon.json index.ts",
        "clean": "rm -rf dist",
        "lint": "eslint . --ext .js,.ts --quite --fix",
        "test": "prettier --check '**/*.{ts,js,json}' && jest --coverage --coverageReporters lcov && eslint . && tsc --noemit",
        "test:coverage": "jest --coverage",
        "prettier-fix": "prettier --write '**/*.{ts,js,json}'"
    },
    "keywords": [],
