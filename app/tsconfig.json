{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "types": ["jest", "node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "./**/*.test.ts"]
}